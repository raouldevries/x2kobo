{
  "name": "x2kobo",
  "version": "0.1.0",
  "description": "Convert X (Twitter) Articles into KEPUB files and upload to Dropbox for Kobo e-readers",
  "type": "module",
  "bin": {
    "x2kobo": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.md\""
  },
  "keywords": [
    "x",
    "twitter",
    "kobo",
    "kepub",
    "ebook"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dropbox": "^10.34.0",
    "jsdom": "^28.1.0",
    "jszip": "^3.10.1",
    "ora": "^9.3.0",
    "playwright": "^1.58.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jsdom": "^27.0.0",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
